@model AddRoomModel

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Room name: </label>
        <input asp-for="Name" class="form-control" placeholder="Enter room name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxVisitorsCount">Max visitors count: </label>
        <input asp-for="MaxVisitorsCount" class="form-control" placeholder="Enter max count of visitors">
        <span asp-validation-for="MaxVisitorsCount"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>